{
	"extends": "../../tsconfig.json",
	"compilerOptions": {
		"module": "CommonJS",
		"moduleResolution": "node",
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"target": "es2017",
		"lib": [
			"ES2019",
			"ESNext"
		],
		"sourceMap": true,
		"inlineSources": true,
		"sourceRoot": "./",
		"outDir": "dist",
		"incremental": true,
		"noEmitHelpers": true,
		"skipLibCheck": true
	},
	"include": [
		"./src",
		"./bin",
	],
}
