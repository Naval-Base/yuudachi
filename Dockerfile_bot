FROM node:10-alpine
LABEL name "Yukikaze Bot"
LABEL version "0.1.0"
LABEL maintainer "iCrawl <icrawltogo@gmail.com>"
ARG VERSION
ENV NODE_ENV= \
	COMMAND_PREFIX= \
	OWNERS= \
	TOKEN= \
	LOGS= \
	WEBHOOK_ID= \
	WEBHOOK_TOKEN= \
	DB= \
	SENTRY= \
	GITHUB_API_KEY= \
	SENTRY_URL= \
	SENTRY_AUTH_TOKEN= \
	SENTRY_ORG= \
	SENTRY_PROJECT= \
	VERSION=$VERSION
WORKDIR /usr/yukikaze
COPY src/bot/package.json .yarnclean /usr/yukikaze/src/bot/
COPY tsconfig.json package.json yarn.lock .yarnclean /usr/yukikaze/
RUN apk add --update \
&& apk add --no-cache ca-certificates \
&& apk add --no-cache --virtual .build-deps git curl build-base python g++ make \
&& yarn install --ignore-engines \
&& apk del .build-deps
COPY src/bot /usr/yukikaze/src/bot/
WORKDIR /usr/yukikaze/src/bot
RUN yarn build
CMD ["node", "dist/bot.js"]
